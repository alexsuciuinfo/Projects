<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="suciu.alexandru.com.bookwormscommunity.activities.EditProfileActivity"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imgPhotoProfileEdit"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/placeholder_profile_circle"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/input"

        android:layout_marginRight="@dimen/input"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/username"
            android:layout_gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilUsernameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="@color/hintColor"
            android:layout_gravity="top"
            >

            <EditText
                android:id="@+id/etUsernameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username (at least 6 characters)"
                style="@style/MyEditText"
                />



        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/input"

        android:layout_marginRight="@dimen/input"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/profile"
            android:layout_gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilFirstnameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="@color/hintColor"
            android:layout_gravity="top"
            >

            <EditText
                android:id="@+id/etFirstnameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyEditText"
                android:hint="First Name"
                />



        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/input"

            android:layout_marginRight="@dimen/input"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:src="@drawable/profile"
                android:layout_gravity="center"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilLastnameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:textColorHint="@color/hintColor"
                android:layout_gravity="top"
                >

                <EditText
                    android:id="@+id/etLastnameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lastname"
                    style="@style/MyEditText"
                    />



            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/input"

        android:layout_marginRight="@dimen/input"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/location"
            android:layout_gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilProfileEditLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="@color/hintColor"
            android:layout_gravity="top"
            >

            <EditText
                android:id="@+id/etProfileEditLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                style="@style/MyEditText"
                />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBirthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/input"
        android:layout_marginRight="@dimen/input"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/date"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvBirthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/etBirthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pick a date"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/input"
        android:layout_marginRight="@dimen/input"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/gender"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvEditProfileGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            />

        <Spinner
            android:layout_marginLeft="10dp"
            android:id="@+id/spinnerGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/input"

        android:layout_marginRight="@dimen/input"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/about"
            android:layout_gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilProfileEditAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="@color/hintColor"
            android:layout_gravity="top"
            >

            <EditText
                android:id="@+id/etProfileEditAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About you"
                android:inputType="textMultiLine"
                style="@style/MyEditText"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
        <TextView
            android:gravity="center_horizontal"
            android:textColor="@color/errorColor"
            android:visibility="gone"
            android:id="@+id/tvEditProfileMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>

