<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>

    <RatingBar
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/ratingBarDialog"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="2"
        android:isIndicator="false"/>

    <Button android:id="@+id/btnDialog"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Remove Rating"  android:focusable="false"
        android:layout_margin="5dip" android:textColor="@color/textTertiaryColor"
        android:textSize="20dip" android:layout_width="match_parent" />

</LinearLayout>