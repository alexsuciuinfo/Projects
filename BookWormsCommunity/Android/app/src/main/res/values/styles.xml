<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/backgroundPrimaryColor</item>
        <item name="colorPrimaryDark">@color/backgroundSecondaryColor</item>
        <item name="colorAccent">@color/textSecondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="Theme.BookWormsCommunity" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/textPrimaryColor</item>
        <item name="colorControlHighlight">@color/backgroundColor</item>
        <item name="android:actionMenuTextColor">@color/textPrimaryColor</item>
        <item name="android:textColorSecondary">@color/textPrimaryColor</item>
        <item name="android:background">@color/backgroundPrimaryColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.BookWormsCommunity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookWormsCommunity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="RatingBarStyle2" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating2</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="MyEditText">
        <item name="colorControlNormal">@color/md_amber_400</item>
        <item name="colorControlActivated">@color/md_orange_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.DeviceDefault.Light.ProgressBar.Small.Title">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


</resources>